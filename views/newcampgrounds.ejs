<% include partials/header %>

<div class="container">
    <h1 style="text-align:center;">Add a New Campground</h1>
    <div style="width:30%; margin:25px auto;">
      <form action="/campgrounds" method="post">
        <div class="form-group">
           <input class="form-control" type="text" name="name" placeholder="Name"></input>
        </div>
        <div class="form-group">
           <input class="form-control" type="number" name="price" placeholder="price" min="0.5" step="0.2"></input>
        </div>
        <div class="form-group">
           <input class="form-control" type="text" name="image" placeholder="image url"></input>
        </div>
        <div class="form-group">
          <textarea class="form-control" rows="5" id="comment" type="text" name="desc" placeholder="description"></textarea>
        </div>
        <div class="form-group">
       <button class="btn btn-lg btn-block btn-primary">submit</button>
       </div>
     </form>
      <a href="/campgrounds">Back to Campgrounds</a>
    </div>
    
      
      
</div>
  
<% include partials/footer %>