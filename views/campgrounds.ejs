<% include partials/header %>

<div class="container">
  <header class="jumbotron">
      <div class="container">
         <h1><span class="glyphicon glyphicon-modal-window"></span><span style="color:#337ab7">Yelp</span>Camp</h1>
         <p>View our hand-picked campgrounds from all over the world</p>
         <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new Campground</a>
     </div>
  </header>
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
           <% campgrouds.forEach(function(campground){ %>
        <div class="col-sm-6 col-md-6 col-lg-3">
          <div class="thumbnail">
                 <img src="<%= campground.image%>"></img>
              <div class="caption">
                  <h4><%= campground.name %></h4>
              </div>
              <a href="/campgrounds/<%= campground._id %>" class="btn btn-info">Read more</a>
          </div>
        </div>
         <% }); %>
    </div>
    

</div>

<% include partials/footer %>